<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BloodBath" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>
    </style>

    <style name="Theme.BloodBath.Fullscreen" parent="Theme.BloodBath">
        <item name="android:actionBarStyle">@style/Widget.Theme.BloodBath.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BloodBath.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>

</resources>