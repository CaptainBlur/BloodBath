<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alarmScreenBackground.AlarmActivity">

    <view class="com.vova9110.bloodbath.alarmScreenBackground.CustomImageView"
        android:id="@+id/alarm_start_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/alarm_delay_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/alarm_draggable_dummy"
        app:tint="#FBC02D" />

    <ImageView
        android:id="@+id/alarm_dismiss_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toTopOf="@+id/alarm_start_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/alarm_draggable_dummy"
        app:tint="#E64A19" />

    <TextView
        android:id="@+id/alarm_delay_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/purple_200"
        android:text="snooze"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>