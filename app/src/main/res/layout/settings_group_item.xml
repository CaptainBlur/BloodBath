<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/settings_group_icon"

        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_clock_alarm" />

    <TextView
        android:id="@+id/settings_group_title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"

        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/black"

        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/settings_group_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NnNnNn" />

    <TextView
        android:id="@+id/settings_group_title_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-2dp"
        android:paddingBottom="7dp"

        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:layout_constraintStart_toEndOf="@+id/settings_group_icon"
        app:layout_constraintTop_toBottomOf="@id/settings_group_title_one"
        tools:text="nNnNnN" />

    <ImageView
        android:id="@+id/settings_group_indicator"
        android:layout_width="17dp"

        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron" />

</androidx.constraintlayout.widget.ConstraintLayout>