<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vova9110.bloodbath">

    <uses-sdk
        android:maxSdkVersion="31"
        android:minSdkVersion="29"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodBath">
        <activity
            android:name=".AlarmScreen.AlarmSupervisor"
            android:exported="false" />

        <service
            android:name=".AlarmScreen.ActivenessDetectionService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".AlarmScreen.AlarmDeployReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".AlarmActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:showOnLockScreen="true" />
        <activity
            android:name=".NewTaskActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".AlarmExec" />
    </application>

</manifest>